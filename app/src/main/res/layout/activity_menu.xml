<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blueLedSi"
            android:textSize="40sp"
            android:layout_margin="10dp"
            android:text="Elije una opciÃ³n:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="@drawable/border_linear"
            android:gravity="center">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="262dp"
                android:layout_height="244dp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/robot1" />

            <Button
                android:id="@+id/btnConectar"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:text="Conectar con sistema Ledsi" />

            <Button
                android:id="@+id/btnSubir"
                android:layout_width="280dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:text="Actualizar imagen" />

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="50dp"
                android:background="@color/blueLedSi">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="HABILITAR SONIDO"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <Switch
                    android:id="@+id/switchPanel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>